@if (Request.IsAuthenticated)
{ 
    <div>
        用户:@Html.ActionLink(User.Identity.Name, "ChangePassword", "Account")!
             @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", style = "display:inline" }))
             {
                 @Html.AntiForgeryToken()
                 <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
             }
    </div> 
}
else
{
    <div>
        @Html.ActionLink("注册", "Register", "Account")
        <span>| </span>
        @Html.ActionLink("登录", "LogIn", "Account")
    </div>
}